{
  "compilerOptions": {
    // Target modern JS
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    // let Next.js handle the emits
    "noEmit": true,
    
    // Keep these on if possible for better type safety
    "strict": true,
    // or at least "strict": false but "skipLibCheck": true
    "skipLibCheck": true,

    // Next.js recommended
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // Next.js auto-generated
    "types": ["next", "node"],

    // Base URL and paths example
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Official Next.js plugin for TS
    "plugins": [{ "name": "next" }]
  },
  "include": ["src", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
