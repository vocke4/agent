{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "next",
      "node"
    ], // Add Next.js and Node types
    "forceConsistentCasingInFileNames": true, // Ensures consistent imports
    "strictNullChecks": true, // Ensure null safety
    "allowSyntheticDefaultImports": true // Avoid module import issues
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    "next-env.d.ts" // Include Next.js env types
  ],
  "exclude": [
    "node_modules"
  ]
}
