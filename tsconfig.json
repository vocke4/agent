{
  "compilerOptions": {
    // Emit modern JS
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],

    // Let Next.js handle emits
    "noEmit": true,

    // Adjust strictness settings as needed
    "strict": false,
    "skipLibCheck": true, // <-- Important to bypass 3rd-party type conflicts

    // Next.js recommended settings
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // Type definitions
    "types": ["next", "node"],

    // Example path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
