{
  "compilerOptions": {
    // Emit modern JS
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    
    // Let Next.js handle emits
    "noEmit": true,
    
    // Strictness (can be true or false as needed)
    "strict": false,
    "skipLibCheck": true, // <-- Helps bypass some 3rd-party type conflicts

    // Next.js recommended
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // Type definitions
    "types": ["next", "node"],

    // Paths for aliases (example)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Next.js plugin
    "plugins": [{ "name": "next" }]
  },
  "include": ["src", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
