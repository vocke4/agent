{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,

    // If you run into 3rd-party type conflicts, skip them
    "skipLibCheck": true,

    // Next.js recommended
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    
    // Types
    "types": ["next", "node"],

    // Example path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
